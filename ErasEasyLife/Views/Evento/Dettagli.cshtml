
@{
    ViewBag.Title = "Dettagli";
    Layout = "~/Views/Shared/StudenteMenu.cshtml";
    ErasEasyLife.Event.Svolgimento s = ViewData["evento"] as ErasEasyLife.Event.Svolgimento;
    List<ErasEasyLife.Event.Studente> studenti = ViewData["studenti"] as List<ErasEasyLife.Event.Studente>;
    int posti_rimasti = s.evento.max_p - studenti.Count();
    ErasEasyLife.Student.Studente studente_entrato = (ErasEasyLife.Student.Studente)Session["studente"];
    DateTime Date1 = DateTime.Parse(s.data_i);
    DateTime Date2 = DateTime.Parse(s.data_f);
    bool prenotato = false; //mi dice se ho già prenotato quest'evento
    foreach (var stud in studenti)
    {
        if (stud.IdStud == studente_entrato.IdStud)
        {
            prenotato = true;
        }
    }
        Dictionary<string, string> bandiere = new Dictionary<string, string> {
                {"Italiana", "https://www.countryflags.io/it/shiny/24.png" },
                {"Francese", "https://www.countryflags.io/fr/shiny/24.png" },
                {"Tedesca", "https://www.countryflags.io/de/shiny/24.png" },
