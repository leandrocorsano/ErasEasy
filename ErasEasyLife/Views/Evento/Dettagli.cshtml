
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/StudenteMenu.cshtml";
    ErasEasyLife.Event.Svolgimento s = ViewData["evento"] as ErasEasyLife.Event.Svolgimento;
    List<ErasEasyLife.Event.Studente> studenti = ViewData["studenti"] as List<ErasEasyLife.Event.Studente>;
    int posti_rimasti = s.evento.max_p - studenti.Count();
    ErasEasyLife.Student.Studente studente_entrato = (ErasEasyLife.Student.Studente)Session["studente"];
    DateTime Date1 = DateTime.Parse(s.data_i);
    DateTime Date2 = DateTime.Parse(s.data_f);
    bool prenotato = false; //mi dice se ho già prenotato quest'evento
    foreach (var stud in studenti)
    {
        if (stud.IdStud == studente_entrato.IdStud)
        {
            prenotato = true;
        }
    }
        Dictionary<string, string> bandiere = new Dictionary<string, string> {
                {"Italian", "https://www.countryflags.io/it/shiny/24.png" },
                {"French", "https://www.countryflags.io/fr/shiny/24.png" },
                {"German", "https://www.countryflags.io/de/shiny/24.png" },
                {"English", "https://www.countryflags.io/gb/shiny/24.png" },
                {"Spanish", "https://www.countryflags.io/es/shiny/24.png" },
                {"Polish", "https://www.countryflags.io/pl/shiny/24.png" },
                {"Austrian", "https://www.countryflags.io/at/shiny/24.png" },
                {"Portuguese", "https://www.countryflags.io/pt/shiny/24.png" },
                {"Belgian", "https://www.countryflags.io/be/shiny/24.png" },
                {"Switzerland", "https://www.countryflags.io/ch/shiny/24.png" },
                {"Albanian", "https://www.countryflags.io/al/shiny/24.png" },
                {"Vltava", "https://www.countryflags.io/md/shiny/24.png" },
                {"Greek", "https://www.countryflags.io/gr/shiny/24.png"},
                {"Montenegrin", "https://www.countryflags.io/me/shiny/24.png" },
                {"Bulgarian", "https://www.countryflags.io/bg/shiny/24.png" },
                {"Romanian", "https://www.countryflags.io/ro/shiny/24.png" },
                {"Swedish", "https://www.countryflags.io/se/shiny/24.png" },
                {"Finnish", "https://www.countryflags.io/fi/shiny/24.png" },
                {"Dutch",  "https://www.countryflags.io/nl/shiny/24.png" },
                {"Danish", "https://www.countryflags.io/dk/shiny/24.png"  },
                {"Slovak", "https://www.countryflags.io/sk/shiny/24.png" },
                {"Lithuanian", "https://www.countryflags.io/lt/shiny/24.png" },
                {"Latvian",  "https://www.countryflags.io/lv/shiny/24.png"},
                {"Estonian",  "https://www.countryflags.io/ee/shiny/24.png"},
                {"Hungarian",  "https://www.countryflags.io/hu/shiny/24.png"},
                {"Norwegian",  "https://www.countryflags.io/no/shiny/24.png" },
                {"Belarusian", "https://www.countryflags.io/by/shiny/24.png" },
                {"Slovenian",  "https://www.countryflags.io/si/shiny/24.png" },
                {"Irish", "https://www.countryflags.io/ie/shiny/24.png"},
                {"Maltese",  "https://www.countryflags.io/mt/shiny/24.png" },
                {"Luxembourg", "https://www.countryflags.io/lu/shiny/24.png" },
                {"Icelandic",  "https://www.countryflags.io/is/shiny/24.png" }
            };
    }
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-center">@s.evento.nome</h1>
        </div>
    </div>
@{ 
    string color;
    if(posti_rimasti>0)
    {
        color = "bg-success";
    }
    else
    {
        color = "bg-danger";
    }
}
    <div class="small-box @color">
        <div class="inner text-center">
            <h1 class="display-2"> @posti_rimasti</h1>

            <h3>Available places</h3>
        </div>
        <div class="small-box-footer">
            <div class="row ">
                <div class="col-6 text-right">
                    <a href="@Url.Action("Lista_Eventi", "Evento")" ><button class="a .btn .btn-app "><i class="fas fa-arrow-left"></i>Back</button></a>&nbsp;
                </div>
                <div class="col-6 text-left">

                    @if (prenotato)
                    {
                        using (Html.BeginForm("Elimina_partecipazione", "Studente", FormMethod.Post))
                        {

                            <input type="hidden" value="@s.evento.IdEv" name="idev" />
                            <button type="submit" class="a .btn .btn-app " ><i class="fas fa-trash-alt"></i>Cancel partecipation</button>

                        }
                    }
                    else if (posti_rimasti > 0)
                    {
                        using (Html.BeginForm("Partecipa", "Studente", FormMethod.Post))
                        {

                            <input type="hidden" value="@s.evento.IdEv" name="idev" />
                            <button type="submit" class="a .btn .btn-app "><i class="fas fa-check-square"></i>Partecipate</button>

                        }

                    }
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header bg-green text-center">
                    <h3> Informations</h3>
                </div>
                <div class="card-body">
                    <blockquote class="blockquote " style="border-left: .2rem solid green;"><i class="fas fa-file-alt"></i>&nbsp; @s.evento.descrizione</blockquote>
                    <p><i class="fas fa-map-marked-alt"></i><b> &nbsp; Place:</b> @s.luogo.via (@s.luogo.citta, @s.luogo.stato)</p>
                    <p><i class="fas fa-calendar-check"></i><b> &nbsp; Start:</b> @Date1.ToString("dd/MM/yyy")  time @s.ora_i</p>
                    <p><i class="fas fa-calendar-times"></i><b> &nbsp; End:</b> @Date2.ToString("dd/MM/yyy") time @s.ora_f</p>
                    <p><i class="fas fa-dollar-sign"></i><b> &nbsp; Cost:</b> @s.evento.costo &euro; </p>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header bg-green text-center">
                    <h3> Students booked</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">

                        @foreach (var stud in studenti)
                        {

                            <li class="list-group-item">
                                <img src="@bandiere[stud.nazionalita]" /> &nbsp; @stud.nome @stud.cognome &nbsp;
                                @if (stud.instagram != "")
                                {
                                    <a href="@stud.instagram"><img src="~/adminlte/img/instagram_logo.png" width="24px" height="24px"></a>
                                }
                                @if (stud.facebook != "")
                                {
                                    <a href="@stud.facebook"><img src="~/adminlte/img/facebook_logo.png" width="24px" height="24px"></a>
                                }
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
