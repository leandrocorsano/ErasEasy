                {"Islandese",  "https://www.countryflags.io/is/shiny/24.png" }
            };
    }
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-center">@s.evento.nome</h1>
        </div>
    </div>
@{ 
    string color;
    if(posti_rimasti>0)
    {
        color = "bg-success";
    }
    else
    {
        color = "bg-danger";
    }
}
    <div class="small-box @color">
        <div class="inner text-center">
            <h1 class="display-2"> @posti_rimasti</h1>

            <h3>Posti disponibili</h3>
        </div>
        <div class="small-box-footer">
            <div class="row ">
                <div class="col-6 text-right">
                    <a href="@Url.Action("Lista_Eventi", "Evento")" ><button class="a .btn .btn-app "><i class="fas fa-arrow-left"></i>Indietro</button></a>&nbsp;
                </div>
                <div class="col-6 text-left">

                    @if (prenotato)
                    {
                        using (Html.BeginForm("Elimina_partecipazione", "Studente", FormMethod.Post))
                        {

                            <input type="hidden" value="@s.evento.IdEv" name="idev" />
                            <button type="submit" class="a .btn .btn-app " ><i class="fas fa-trash-alt"></i>Elimina partecipazione</button>

                        }
                    }
                    else if (posti_rimasti > 0)
                    {
                        using (Html.BeginForm("Partecipa", "Studente", FormMethod.Post))
                        {

                            <input type="hidden" value="@s.evento.IdEv" name="idev" />
                            <button type="submit" class="a .btn .btn-app "><i class="fas fa-check-square"></i>Partecipa</button>

                        }

                    }
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header bg-green text-center">
                    <h3> Informazioni</h3>
                </div>
                <div class="card-body">
                    <blockquote class="blockquote " style="border-left: .2rem solid green;"><i class="fas fa-file-alt"></i>&nbsp; @s.evento.descrizione</blockquote>
                    <p><i class="fas fa-map-marked-alt"></i><b> &nbsp; Luogo:</b> @s.luogo.via (@s.luogo.citta, @s.luogo.stato)</p>
                    <p><i class="fas fa-calendar-check"></i><b> &nbsp; Inizio:</b> @Date1.ToString("dd/MM/yyy")  ore @s.ora_i</p>
                    <p><i class="fas fa-calendar-times"></i><b> &nbsp; Fine:</b> @Date2.ToString("dd/MM/yyy") ore @s.ora_f</p>
                    <p><i class="fas fa-dollar-sign"></i><b> &nbsp; Costo:</b> @s.evento.costo &euro; </p>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header bg-green text-center">
                    <h3> Studenti partecipanti</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">

                        @foreach (var stud in studenti)
                        {

                            <li class="list-group-item">
                                <img src="@bandiere[stud.nazionalita]" /> &nbsp; @stud.nome @stud.cognome &nbsp;
                                @if (stud.instagram != "")
                                {
                                    <a href="@stud.instagram"><img src="~/adminlte/img/instagram_logo.png" width="24px" height="24px"></a>
                                }
                                @if (stud.facebook != "")
                                {
                                    <a href="@stud.facebook"><img src="~/adminlte/img/facebook_logo.png" width="24px" height="24px"></a>
                                }
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
