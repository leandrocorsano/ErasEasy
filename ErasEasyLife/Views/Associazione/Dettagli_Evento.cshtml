
@{
    ViewBag.Title = "Dettagli";
    Layout = "~/Views/Shared/AssociazioneMenu.cshtml";
    ErasEasyLife.Event.Svolgimento s = ViewData["evento"] as ErasEasyLife.Event.Svolgimento;
    List<ErasEasyLife.Event.Studente> studenti = ViewData["studenti"] as List<ErasEasyLife.Event.Studente>;
    List<ErasEasyLife.Event.Volontario> volontari = ViewData["volontari"] as List<ErasEasyLife.Event.Volontario>;
    int n_studenti = studenti.Count();
    int n_volontari = volontari.Count();
    DateTime Date1 = DateTime.Parse(s.data_i);
    DateTime Date2 = DateTime.Parse(s.data_f);
    
    Dictionary<string, string> bandiere = new Dictionary<string, string> {
                {"Italiana", "https://www.countryflags.io/it/shiny/24.png" },
                {"Francese", "https://www.countryflags.io/fr/shiny/24.png" },
                {"Tedesca", "https://www.countryflags.io/de/shiny/24.png" },
                {"Inglese", "https://www.countryflags.io/gb/shiny/24.png" },
                {"Spagnola", "https://www.countryflags.io/es/shiny/24.png" },
                {"Polacca", "https://www.countryflags.io/pl/shiny/24.png" },
                {"Austriaca", "https://www.countryflags.io/at/shiny/24.png" },
                {"Portoghese", "https://www.countryflags.io/pt/shiny/24.png" },
                {"Belga", "https://www.countryflags.io/be/shiny/24.png" },
                {"Svizzera", "https://www.countryflags.io/ch/shiny/24.png" },
                {"Albanese", "https://www.countryflags.io/al/shiny/24.png" },
                {"Moldava", "https://www.countryflags.io/md/shiny/24.png" },
                {"Greca", "https://www.countryflags.io/gr/shiny/24.png"},
                {"Montenegrina", "https://www.countryflags.io/me/shiny/24.png" },
                {"Bulgara", "https://www.countryflags.io/bg/shiny/24.png" },
                {"Rumena", "https://www.countryflags.io/ro/shiny/24.png" },
                {"Svedese", "https://www.countryflags.io/se/shiny/24.png" },
                {"Finlandese", "https://www.countryflags.io/fi/shiny/24.png" },
                {"Olandese",  "https://www.countryflags.io/nl/shiny/24.png" },
                {"Danese", "https://www.countryflags.io/dk/shiny/24.png"  },
                {"Slovacca", "https://www.countryflags.io/sk/shiny/24.png" },
                {"Lituana", "https://www.countryflags.io/lt/shiny/24.png" },
                {"Lettone",  "https://www.countryflags.io/lv/shiny/24.png"},
                {"Estone",  "https://www.countryflags.io/ee/shiny/24.png"},
                {"Ungherese",  "https://www.countryflags.io/hu/shiny/24.png"},
                {"Norvegese",  "https://www.countryflags.io/no/shiny/24.png" },
                {"Bielorussa", "https://www.countryflags.io/by/shiny/24.png" },
                {"Slovena",  "https://www.countryflags.io/si/shiny/24.png" },
                {"Irlandese", "https://www.countryflags.io/ie/shiny/24.png"},
                {"Maltese",  "https://www.countryflags.io/mt/shiny/24.png" },
                {"Lussemburghese", "https://www.countryflags.io/lu/shiny/24.png" },
                {"Islandese",  "https://www.countryflags.io/is/shiny/24.png" }
            };
    }
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-center">@s.evento.nome</h1>
        </div>
    </div>
@{ 
    string color1;
    if(n_studenti>0)
    {
        color1 = "bg-success";
    }
    else
    {
        color1 = "bg-danger";
    }
    string color2;
    if(n_volontari>0)
    {
        color2 = "bg-success";
    }
    else
    {
        color2 = "bg-danger";
    }
}
<div class="row">

    <div class="col-sm-6">
        <div class="small-box @color1">
            <div class="inner text-center">
                <h1 class="display-2"> @n_studenti</h1>

                <h3>Studenti Partecipanti</h3>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="small-box @color2">
            <div class="inner text-center">
                <h1 class="display-2"> @n_volontari</h1>

                <h3>Volontari Partecipanti</h3>
            </div>
        </div>
    </div>
</div>

    <div class="row ">
        <div class="col-sm-5 text-right">
            <a href="@Url.Action("Elenco_eventi", "Associazione")"><button class="a .btn .btn-app "><i class="fas fa-arrow-left"></i>Indietro</button></a>&nbsp;
        </div>
        <div class="col-sm-2 text-center">

            @using (Html.BeginForm("Modifica_Evento", "Associazione", FormMethod.Post))
            {

                <input type="hidden" value="@s.evento.IdEv" name="idev" />
                <button type="submit" class="a .btn .btn-app "><i class="fas fa-edit"></i>Modifica Evento</button>

            }
        </div>
        <div class="col-sm-5 text-left">
            @using (Html.BeginForm("Elimina_Evento", "Associazione", FormMethod.Post))
            {

                <input type="hidden" value="@s.evento.IdEv" name="idev" />
                <button type="submit" class="a .btn .btn-app "><i class="fas fa-trash-alt"></i>Elimina Evento</button>

            }

            }
        </div>
    </div>



    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header bg-green text-center">
                    <h3> Studenti partecipanti</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">

                        @foreach (var stud in studenti)
                        {

                            <li class="list-group-item">
                                <img src="@bandiere[stud.nazionalita]" /> &nbsp; @stud.nome @stud.cognome &nbsp;
                                <a href="mailto:@stud.email"><i class="fas fa-envelope"></i></a>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header bg-green text-center">
                    <h3> Volontari partecipanti</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">

                        @foreach (var vol in volontari)
                        {

                            <li class="list-group-item">
                                <i class="fas fa-user"></i> @vol.nome @vol.cognome &nbsp;
                                <a href="mailto:@vol.email"><i class="fas fa-envelope"></i></a>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bg-green text-center">
                    <h3> Informazioni</h3>
                </div>
                <div class="card-body text-center">
                    <blockquote class="blockquote " style="border-left: .2rem solid green;"><i class="fas fa-file-alt"></i>&nbsp; @s.evento.descrizione</blockquote>
                    <p><i class="fas fa-map-marked-alt"></i><b> &nbsp; Luogo:</b> @s.luogo.via (@s.luogo.citta, @s.luogo.stato)</p>
                    <p><i class="fas fa-calendar-check"></i><b> &nbsp; Inizio:</b> @Date1.ToString("dd/MM/yyy")  ore @s.ora_i</p>
                    <p><i class="fas fa-calendar-times"></i><b> &nbsp; Fine:</b> @Date2.ToString("dd/MM/yyy") ore @s.ora_f</p>
                    <p><i class="fas fa-dollar-sign"></i><b> &nbsp; Costo:</b> @s.evento.costo &euro; </p>

                </div>
            </div>
        </div>
    </div>

