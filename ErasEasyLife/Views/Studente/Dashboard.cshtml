
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/StudenteMenu.cshtml";
    ErasEasyLife.Student.Studente stud = (ErasEasyLife.Student.Studente)Session["studente"];

}

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-center">Riepilogo</h1>
        </div>
    </div>
    <div class="row">
        
        
        <div class="col-sm-12">
            <div class="card">
                <h1 class="text-center">Welcome <b> @stud.nome @stud.cognome</b></h1>
                <div class="row">
                    <div class="col-sm-6">
                        <a href="@Url.Action("Profilo", "Studente")"><button type="button" class="btn btn-block btn-outline-secondary btn-lg">Profile</button></a>
                    </div>
                    <div class="col-sm-6">
                        <a href="@Url.Action("Modifica_Pass", "Studente")"><button type="button" class="btn btn-block btn-outline-success btn-lg">Change Password</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="row">
            <div class="col-sm-12">
                <h1 class="text-center">Community</h1>
            </div>
            <div class="col-sm-4">
                <div class="small-box bg-secondary ">
                    <div class="inner text-center">
                        <h1 class="display-2"> @ViewData["n_conferme"]</h1>

                        <h3>Friends</h3>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <a href="@Url.Action("Elenco_Amici", "Studente")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="small-box bg-green ">
                    <div class="inner text-center">
                        <h1 class="display-2"> @ViewData["n_mie_richieste"]</h1>

                        <h3>Send Requests</h3>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user-clock"></i>
                    </div>
                    <a href="@Url.Action("Le_mie_richieste", "Studente")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="small-box bg-secondary ">
                    <div class="inner text-center">
                        <h1 class="display-2"> @ViewData["n_altre_richieste"]</h1>

                        <h3>Friend Requests</h3>
                    </div>
                    <div class="icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <a href="@Url.Action("Richieste_Amicizia", "Studente")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <h1 class="text-center">Event</h1>
            </div>
            <div class="col-sm-6">
                <div class="small-box bg-green ">
                    <div class="inner text-center">
                        <h1 class="display-2"> @ViewData["n_prossimi_eventi"]</h1>

                        <h3>Next Events</h3>
                    </div>
                    <div class="icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <a href="@Url.Action("Lista_Eventi", "Evento")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="small-box bg-secondary ">
                    <div class="inner text-center">
                        <h1 class="display-2"> @ViewData["n_miei_eventi"]</h1>

                        <h3>My Booking</h3>
                    </div>
                    <div class="icon">
                        <i class="fas fa-bookmark"></i>
                    </div>
                    <a href="@Url.Action("MieiEventi", "Evento")" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>

