<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <!--<title>AdminLTE 3 | Starter</title>-->
    <!-- Font Awesome Icons -->
    <!--<link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">-->
    <!-- Theme style -->
    <!--<link rel="stylesheet" href="dist/css/adminlte.min.css">-->
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>

            </ul>

            


        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-light-primary bg-green elevation-4 ">
            <!-- Brand Logo -->
          
                <img src="~/adminlte/img/ERASEASYLIFE1.png" width="100%" height="100%" />
           
            

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    
                  
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview ">
                            <a href="#" class="nav-link text-white">
                                <img src="~/adminlte/img//users.png" class="img-circle elevation-2" alt="User Image">
                                <p>
                                    @{ErasEasyLife.Student.Studente stud = (ErasEasyLife.Student.Studente)Session["studente"]; @stud.nome; }
                                    @stud.cognome
                                </p>
                                    
                                
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item " style="margin-left:15px;">
                                    <a href="@Url.Action("Profilo", "Studente")" class="nav-link text-white">
                                        <i class="nav-icon fas fa-user"></i>
                                        <p>Profile</p>
                                    </a>
                                </li>
                                <li class="nav-item " style="margin-left:15px;">
                                    <a href="@Url.Action("Modifica_Profilo", "Studente")" class="nav-link text-white">
                                        <i class="nav-icon fas fa-pencil-alt"></i>
                                        <p>Edit Profile</p>
                                    </a>
                                </li>
                                <li class="nav-item " style="margin-left:15px;">
                                    <a href="@Url.Action("Modifica_Pass", "Studente")" class="nav-link text-white">
                                        <i class="nav-icon fas fa-lock"></i>
                                        <p>Change Password</p>
                                    </a>
                                </li>
                            </ul>
                            </li>
                        </ul>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview ">
                            <a href="@Url.Action("Dashboard", "Studente")" class="nav-link  bg-light ">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard

                                </p>
                            </a>
                        </li>
                    </ul>
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview ">
                            <a href="@Url.Action("Logout", "Studente")" class="nav-link text-white">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>
                                    Logout

                                </p>
                            </a>
                        </li>
                    </ul>
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">
                            <a href="#" class="nav-link text-white">
                                <i class="nav-icon fas fa-bullhorn"></i>
                                <p>
                                    Event
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">

                                <li class="nav-item" style="margin-left:15px;">
                                    <a href="@Url.Action("Lista_eventi", "Evento")" class="nav-link text-white">
                                        <i class="fas fa-forward nav-icon"> </i>
                                        <p>Upcoming Events</p>
                                    </a>
                                </li>
                                <li class="nav-item" style="margin-left:15px;">
                                    <a href="@Url.Action("MieiEventi", "Studente")" class="nav-link text-white">
                                        <i class=" fas fa-clipboard-list nav-icon"> </i>
                                        <p>My events</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">
                            <a href="#" class="nav-link text-white">
                                <i class="nav-icon fas fa-comments"></i>
                                <p>
                                    Comunity
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item" style="margin-left:15px;">
                                    <a href="@Url.Action("Elenco", "Studente")" class="nav-link text-white">
                                        <i class="nav-icon fas fa-user-graduate"></i>
                                        <p>Students List</p>
                                    </a>
                                </li>
                                <li class="nav-item" style="margin-left:15px;">
                                    <a href="@Url.Action( "Elenco_Amici", "Studente")" class="nav-link text-white">
                                        <i class="fas fa-users nav-icon"> </i>
                                        <p>Friends</p>
                                    </a>
                                </li>
                                <li class="nav-item" style="margin-left:15px;">
                                    <a href="@Url.Action("Richieste_Amicizia", "Studente")" class="nav-link text-white">
                                        <i class="fas fa-user-plus nav-icon "> </i>
                                        <p>Requests received</p>
                                    </a>
                                </li>
                                <li class="nav-item" style="margin-left:15px;">
                                    <a href="@Url.Action("Le_mie_richieste", "Studente")" class="nav-link text-white">
                                        <i class="fas fa-clock nav-icon "> </i>
                                        <p>Requests sent</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>


                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">
                            <a href="#" class="nav-link text-white">
                                <i class="nav-icon fas fa-university"></i>
                                <p>
                                    University
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item" style="margin-left:15px;">
                                    <a href="#" class="nav-link text-white">
                                        <i class="fas fa-edit nav-icon "> </i>
                                        <p>Registration</p>
                                    </a>
                                </li>
                                <li class="nav-item" style="margin-left:15px;">
                                    <a href="#" class="nav-link text-white">
                                        <i class="fas fa-list nav-icon "> </i>
                                        <p>Show</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview ">
                            <a href="@Url.Action("Elenco", "Associazione")" class="nav-link text-white">
                                <i class="nav-icon fas fa-city"></i>
                                <p>
                                    Associations

                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h2 class="m-0 text-dark">@ViewBag.Title</h2>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item active"> @Html.ActionLink("Student", "Dashboard", "Studente")</li>
                                <li class="breadcrumb-item ">@ViewBag.Title</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid" >
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2014-2019 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/adminlte/js")
    @RenderSection("scripts", required: false)
</body>
</html>
